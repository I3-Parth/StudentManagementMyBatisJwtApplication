<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.parth.StudentManagementMyBatisJwt.repository.jwtUser.UserRepository">
    <resultMap id="UserResultMap" type="com.parth.StudentManagementMyBatisJwt.model.jwtUser.UserEntity" >
        <id property="id" column="id" />
        <result property="username" column="username" />
        <result property="password" column="password" />
        <result property="role" column="role" />
    </resultMap>

    <select id="findUserByUsername" parameterType="java.lang.String" resultMap="UserResultMap" >
        select * from user_entity where username = #{username}
    </select>
</mapper>